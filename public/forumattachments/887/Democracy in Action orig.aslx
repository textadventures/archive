      <attr name="feature_container" type="boolean">false</attr>
      <transparent type="boolean">false</transparent>
      <listchildren type="boolean">false</listchildren>
      <listchildrenprefix>a weathered paper</listchildrenprefix>
      <openmsg>The glass shudders and dissolves.</openmsg>
      <close type="boolean">false</close>
      <isopen type="boolean">false</isopen>
      <usestandardverblist />
      <open type="boolean">false</open>
      <displayverbs type="stringlist">
        <value>Look at</value>
      </displayverbs>
      <look type="script"><![CDATA[
        if (Got(weathered paper)) {
          msg ("An empty emerald pedestal stands before you.")
        }
        else {
          msg ("An emerald pedestal stands before you. On it you see a weathered paper. Looking closely, you can make out the words <i> Constitution of Cognosco </i> in fancy writing. Your heart skips a beat. Is this really the Consititution, the document that holds the greatest laws of the country, that holds the Charter of Rights and Freedoms and guarantees every citizen's rights? If so, this is the very document that makes Cognosco different from Ignarus.")
        }
      ]]></look>
    </object>
    <object name="emeralds">
      <inherit name="editor_object" />
      <inherit name="plural" />
      <scenery />
      <alt type="stringlist">
        <value>walls</value>
        <value>green</value>
