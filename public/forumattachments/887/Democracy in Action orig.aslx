    <object name="table">
      <inherit name="editor_object" />
      <inherit name="surface" />
      <look>This is a coarse wooden table.</look>
      <feature_container />
      <hidechildren />
      <listchildren />
      <contentsprefix>on which there are</contentsprefix>
      <object name="freedom block">
        <inherit name="editor_object" />
        <take />
        <takemsg>You pick up the purple block.</takemsg>
        <dropmsg>You set the block aside.</dropmsg>
        <feature_usegive />
        <alias>purple block</alias>
        <drop type="boolean">false</drop>
        <usestandardverblist />
        <alt type="stringlist">
          <value>purple</value>
        </alt>
        <look type="script">
          msg ("A purple metal block. There is a picture on it and the words \"people have the right to think and speak as they wish.\"")
          picture ("rightsandfreedoms.png")
        </look>
        <use type="script"><![CDATA[
          msg ("What do you want to use it on? (HINT: Type \"use <u> object </u> on <u> other object </u>)")
        ]]></use>
        <selfuseanything type="script">
          msg ("This can only be used on the pillars of deomcracy.")
        </selfuseanything>
        <selfuseon type="scriptdictionary">
          <item key="representation">
            if (GetBoolean(representation, "set")) {
              msg ("There is already a block there. You can't add another.")
            }
            else {
              msg ("You try to wedge the block into the space, but it doesn't quite fit. Perhaps it goes someplace else?")
            }
          </item>
          <item key="justice">
            if (GetBoolean(justice, "set")) {
              msg ("There is already a block there. You can't add another.")
